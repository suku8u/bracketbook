<h1>Bracket Generator</h1>

<div>
  <h2 id="bracket-name-box"></h2>
</div>

<div id="bracket-box" class="clearfix" style="margin:20px 0; display:none;">

</div>

<%= form_for(@bracket) do |f| %>
  <% if @bracket.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@bracket.errors.count, "error") %> prohibited this bracket from being saved:</h2>

      <ul>
      <% @bracket.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :bracket_teams, "Teams" %>
    <%= f.text_area :bracket_teams, value: "a\nb\nc\nd" %>
  </div>
  <div class="actions">
    <%= f.submit :class => 'btn btn-success', :value => 'Save Bracket' %>
  </div>
<% end %>

<button id="generate-bracket" class="btn btn-primary">Generate Bracket</button>
<button id="edit-bracket" class="btn btn-primary">Edit Bracket</button>