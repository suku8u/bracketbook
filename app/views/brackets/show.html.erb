<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @bracket.name %>
</p>

<h2>Teams</h2>
<ul id="teams">
  <% @bracket.teams.each do |team| %>
    <li>
      <%= team.name %>
    </li>
  <% end %>
</ul>

<h2>Matches</h2>
<ul id="matches">
  <% @bracket.matches.each do |match| %>
    <% if not match.team1_id.nil? and not match.team2_id.nil? %>
      <li>
        <%= Team.find_by_id(match.team1_id).name %> vs <%= Team.find_by_id(match.team2_id).name %>
          score: <%= match.team1_score %> vs <%= match.team2_score %>

         <%= link_to "edit", edit_bracket_match_path(match) %>
      </li>
    <% end %>
  <% end %>
</ul>


<%= link_to 'Edit', edit_bracket_path(@bracket) %> |
<%= link_to 'Back', brackets_path %>
